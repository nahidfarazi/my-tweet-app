<h1>Sign Up</h1>
<%= form_with model: @user, url: sign_up_path do | form | %>
    <% if @user.errors.any? %>
        <div>
            <% @user.errors.full_messages.each do |messages| %>
            <div><%= messages %> </div>
            <% end %>
        </div>
    <% end %>
    <div class="mb-3">
        <%= form.label :email%>
        <%= form.email_field :email,  class:"form-control", placeholder:"name@example.com"  %>
    </div>
    <div class="mb-3">
       <%= form.label :password %>
        <%=form.password_field :password,  class:"form-control", placeholder:"password"  %>
    </div>
    <div class="mb-3">
        <%= form.label :confirm_password%>
        <%= form.password_field :password_confirmation,  class:"form-control", placeholder:"confirm password"  %>
    </div>
    <%= form.submit "Sign Up", class:"btn btn-primary"  %>
   
 
<% end %>